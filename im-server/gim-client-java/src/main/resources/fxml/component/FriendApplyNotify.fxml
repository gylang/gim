<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="30.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <HBox prefHeight="30.0" prefWidth="600.0">
        <children>
            <ImageView fx:id="avatar" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" />
            <TextField fx:id="nickname" prefHeight="30.0" text="昵称">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <HBox.margin>
                    <Insets left="10.0" />
                </HBox.margin>
            </TextField>
            <TextField fx:id="username" layoutX="70.0" layoutY="10.0" prefHeight="30.0" prefWidth="130.0" text="用户名">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
            </TextField>
            <Button ellipsisString="同意" mnemonicParsing="false" onAction="#aggree" prefHeight="30.0" text="同意" textFill="#0b69d6" textOverrun="WORD_ELLIPSIS" />
         <Button fx:id="reject" mnemonicParsing="false" onAction="#reject" prefHeight="30.0" prefWidth="43.0" text="拒绝" textFill="#e41212">
            <opaqueInsets>
               <Insets left="10.0" />
            </opaqueInsets>
            <cursor>
               <Cursor fx:constant="DEFAULT" />
            </cursor>
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
         </Button>
         <TextField fx:id="message" prefHeight="30.0" prefWidth="175.0" />
        </children>
    </HBox>
</AnchorPane>
